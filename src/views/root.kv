##:kivy
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import NoTransition kivy.uix.screenmanager.NoTransition

<RootScreen>

    MDNavigationLayout:

        ScreenManager:
            id: screen_manager
            transition: NoTransition()
            # transition: FadeTransition(duration=.2, clearcolor=app.theme_cls.bg_dark)
                    
        MDNavigationDrawer:
            id: nav_drawer
            type: "standard"
            # closing_time:0

            MDNavigationDrawerMenu:

                AnchorLayout:
                    anchor_x: "center"
                    size_hint_y: None
                    height: avatar.height

                    Image:
                        id: avatar
                        size_hint: None, None
                        size: "56dp", "56dp"
                        source: "assets/images/lancium.png"

                MDNavigationDrawerHeader:
                    title:"Smart Response Mobile"
                    title_font_size:"20sp"
                    title_halign:"center"

                MDNavigationDrawerItem:
                    text: "Home"
                    icon: "home"
                    on_release:
                        nav_drawer.set_state("close")
                        root.goto_screen("Home")

                MDNavigationDrawerDivider:
        
                MDNavigationDrawerLabel:
                    text: "Asset Management"

                MDNavigationDrawerItem:
                    text: "Scan Labels"
                    icon: "barcode-scan"
                    on_release:
                        nav_drawer.set_state("close")
                        root.goto_screen("Scan Labels")
                        # app.start_loading_screen()

                MDNavigationDrawerItem:
                    icon: "table-check"
                    text: "Assets"
                    on_release:
                        nav_drawer.set_state("close")
                        root.goto_screen("Assets")
                        # app.start_loading_screen()

                MDNavigationDrawerDivider:

                MDNavigationDrawerLabel:
                    text: "Settings"

                MDNavigationDrawerItem:
                    icon: "table-cog"
                    text: "Asset Management"
                    on_release:
                        nav_drawer.set_state("close")
                        root.goto_screen("Asset Setup")