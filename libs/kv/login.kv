
#:import MDBoxLayout kivymd.uix.boxlayout.MDBoxLayout
#:import MDToolbar kivymd.uix.toolbar.MDToolbar
#:import MDNavigationDrawer kivymd.uix.navigationdrawer.MDNavigationDrawer

<LoginScreen>

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        
        MDBoxLayout:
            orientation: 'vertical'
            adaptive_height: True
            size_hint_x: 0.7

            MDTextField:
                id: username_field
                multiline: False
                write_tab: False
                on_text_validate: root.login(username_field.text, password_field.text)
                hint_text: 'Username'

            MDTextField:
                id: password_field
                multiline: False
                write_tab: False
                password: True
                on_text_validate: root.login(username_field.text, password_field.text)
                hint_text: 'Password'
                
            MDRaisedButton:
                pos_hint: {"center_x": 0.5}
                id: submit_button
                text: 'Submit'
                on_press: root.login(username_field.text, password_field.text)
